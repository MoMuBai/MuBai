<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rc_webview_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#0195ff"
        android:clickable="true">

        <ImageView
            android:id="@+id/rc_left_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/rc_left_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/rc_left_image"
            android:text="SealTalkWeb"
            android:textColor="#FFF"
            android:textSize="16sp" />

    </RelativeLayout>


    <ProgressBar
        android:id="@+id/rc_web_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@android:color/transparent"
        android:progressDrawable="@color/rc_web_progress_bar"
        android:visibility="gone" />

    <io.rong.common.RongWebView
        android:id="@+id/rc_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>